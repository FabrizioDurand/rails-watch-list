<%= render "shared/home_banner"%>

<div class="container">
  <div class="d-flex justify-content-between mt-5">
    <h2>My lists</h2>
    <%= link_to "Add a new list", new_list_path, class: "btn btn-primary" %>
  </div>
  <div class = "d-flex justify-content-between align-content-around flex-wrap">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category mt-5" style="width: 18rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%= link_to list.name, list_path(list), class: "card-text-white" %>
        </div>
      <% else %>
        <div class="card-category mt-5" style="width: 18rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://img.freepik.com/free-vector/red-movie-theater-seats-with-curtains-background_1017-38388.jpg?w=2000')">
            <%= link_to list.name, list_path(list), class: "card-text-white" %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
