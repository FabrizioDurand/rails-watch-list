
<%= render "shared/home_banner"%>

<div class="container">
  <div class = "d-flex justify-content-around align-content-around flex-wrap">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category mt-5" style="width: 18rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% else %>
        <div class="card-category mt-5" style="width: 18rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://i.pinimg.com/564x/29/5a/fc/295afc0b47c1052b7774377c90551b56.jpg')">
            <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>

  <%= link_to "Add a new list", new_list_path, class: "btn btn-primary" %>
