<div class="container mt-3">
  <h1>Add a review for <%= @list.name %> movie list</h1>
  <%= simple_form_for [@list, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATINGS %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
